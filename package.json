{
  "name": "@ribbon-studios/react-utils",
  "description": "Collection of react utilities curated by the Ribbon Studios Team~",
  "version": "2.3.2",
  "type": "module",
  "source": "src/*.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./react-router": {
      "import": {
        "types": "./dist/react-router.d.ts",
        "default": "./dist/react-router.js"
      },
      "require": {
        "types": "./dist/react-router.d.cts",
        "default": "./dist/react-router.cjs"
      }
    },
    "./react-helmet": {
      "import": {
        "types": "./dist/react-helmet.d.ts",
        "default": "./dist/react-helmet.js"
      },
      "require": {
        "types": "./dist/react-helmet.d.cts",
        "default": "./dist/react-helmet.cjs"
      }
    },
    "./react-query": {
      "import": {
        "types": "./dist/react-query.d.ts",
        "default": "./dist/react-query.js"
      },
      "require": {
        "types": "./dist/react-query.d.cts",
        "default": "./dist/react-query.cjs"
      }
    }
  },
  "scripts": {
    "ci": "bun install --frozen-lockfile",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "build": "rm -rf dist && vite build"
  },
  "peerDependencies": {
    "react": "*",
    "@tanstack/react-query": ">= 5",
    "@dr.pogodin/react-helmet": ">= 2",
    "react-router-dom": ">= 6"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    },
    "@dr.pogodin/react-helmet": {
      "optional": true
    },
    "react-router-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tanstack/react-query": "^5.67.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.7",
    "ajv": "^8.17.1",
    "chance": "^1.1.12",
    "eslint": "^9.21.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^17.2.2",
    "jiti": "^2.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@dr.pogodin/react-helmet": "^3.0.0",
    "react-router-dom": "^7.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-types": "^3.1.2",
    "vitest": "^3.0.7",
    "vitest-dom": "^0.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ribbon-studios/react-utils.git"
  },
  "license": "MIT"
}
